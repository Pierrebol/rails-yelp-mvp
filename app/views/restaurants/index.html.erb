<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <h1>Restaurants</h1>
    <%= link_to "New restaurant", new_restaurant_path %>
  </div>
  <ul>
    <% @restaurants.each do |restaurant| %>
    <li class="card py-2 my-2">
        <%= link_to "#{restaurant.name}", restaurant_path(restaurant) %> - <%= restaurant.category %>
      <% end %>
    </li>
  </ul>
</div>
